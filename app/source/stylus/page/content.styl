.has-error
  color #a94442
  input, textarea, select
    position: relative
    &:active, &:focus
      border-color: #a94442
  .radio-box
    border-color #a94442

.has-success
  color #3c763d
  input, textarea, select
    position: relative
    &:active, &:focus
      border-color: #3c763d
  .radio-box
    border-color #3c763d

.radio-box
  position relative
  padding 10px 15px 10px 40px
  input
    position absolute
    top 0
    bottom 0
    left 15px
    width 15px
    margin auto

.steps
  padding 0 0 30px
  @media screen and (min-width: 992px)
    padding 70px 15px
  &-navigation
    padding 20px 0
    z-index 1
    background #fff
    @media screen and (min-width: 992px)
      padding 30px
      position fixed
      top 0
      right 0
      width calc(100% - 250px)
    @media screen and (max-width: 992px) {
      &.fixed {
        padding 20px 15px
        position fixed
        top 0
        right 0
        width 100%
        z-index 2
        background #fff
        box-shadow 0 2px 10px -8px #414141
      }
    }
    &-progress
      min-height 10px
      background #ccc
      position relative
      overflow hidden
      border-radius 4px
      &-bar
        transition width 0.5s
        background green
        position absolute
        top 0
        left 0
        height 100%

.d-inline
  display inline-block !important
  width auto !important

.v-row
  margin-left -5px
  margin-right -5px

.v-col
  padding-left 5px
  padding-right 5px

.finish
  margin 50px 0

.date-picker
  select
    padding: 6px 12px
    background: #ffffff
    border: 1px solid #e2e2e2
    border-radius: 3px
    margin-right: 5px

.radio-box:hover
  background #dff0d8

.v-panel
  border 1px solid #E5E6EB
  position: relative
  border-radius 3px
  margin-top 30px
  margin-bottom 30px
  p
    color #585858
    line-height 25px
    margin 0
  &-title
    background #F4F4F6
    padding 15px 20px
    border-bottom 1px solid #E5E6EB
    h2
      font-size 20px
      margin 0 0 10px
    &-pre
      position absolute
      bottom 100%
      height 30px
      width 100%
      left 0
      right 0
      text-align center
      text-transform uppercase
      padding 5px 0
      color #3c763d

  &-body
    padding 25px 20px
    position: relative
    &::after
      position absolute
      bottom 0
      left 0
      right 0
      background #E5E6EB
      margin 0 20px
      content ''
      height 1px
    p
      padding 0 0 5px 30px
      position relative

      &.check
        &::before
          content 'âœ”'
          position: absolute
          left 0
          font-size 24px
          color #54AC00
      &.del
        text-decoration line-through
  &-footer
    padding 20px
    .price
      color: #A40000
      margin-bottom 10px
      font-size 20px
      min-height 30px

.radio-payment-method
  .radio-box
    width: 100%;
    margin: 0 0 5px 0;
    &-content
      position: relative;
      &-text
        padding-right: 150px;
        @media screen and (max-width: 768px)
          padding-right: 0;
      &-img
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        margin: auto;
        height: 30px;
        @media screen and (max-width: 768px)
          position: relative;
         
       
     
   
 
