.has-error
  color #a94442
  input, textarea, select
    position: relative
    &:active, &:focus
      border-color: #a94442
  .control-container .wrap-controller
    position relative
    &::after
      position: absolute
      height 20px
      width 30px
      text-align center
      top: 0
      right: 5px
      bottom: 0
      margin auto
      font: normal normal normal 18px / 1 FontAwesome;
      content "\f00d"

.has-success
  color #3c763d
  input, textarea, select
    position: relative
    &:active, &:focus
      border-color: #3c763d
  .control-container .wrap-controller
    position relative
    &::after
      position: absolute
      height 20px
      width 30px
      text-align center
      top: 0
      right: 5px
      bottom: 0
      margin auto
      font: normal normal normal 18px / 1 FontAwesome;
      content "\f00c"

.steps
  padding 50px 0
  &-navigation
    padding 20px 0
    transition 0.5s
    @media screen and (min-width: 992px)
      padding 20px 30px
      position fixed
      top 0
      right 0
      width calc(100% - 250px)
    &-progress
      min-height 10 px
      background #ccc
      position relative
      overflow hidden
      border-radius 4px
      &-bar
        transition width 0.5s
        background green
        position absolute
        top 0
        left 0
        height 100%

.d-inline
  display inline-block !important
  width auto !important
  min-width 130px

.v-radio
  border: 1px solid
  padding: 5px 10px
  border-radius: 3px
  position relative
  margin-bottom 5px
  text-align center
  label
    margin 0
    &::before
      content ''
      position: absolute
      width 100%
      height 100%
      top 0
      left 0
      cursor pointer
      background transparent
      transition 0.2s
    .icon
      padding 0 5px
  input
    margin 6px 0
  input:checked + label::before
    background rgba(69, 193, 69, 0.188)